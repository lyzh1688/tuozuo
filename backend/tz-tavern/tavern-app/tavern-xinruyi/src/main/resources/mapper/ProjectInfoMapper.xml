<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tuozuo.tavern.xinruyi.mapper.ProjectInfoMapper">
  <resultMap id="BaseResultMap" type="com.tuozuo.tavern.xinruyi.model.ProjectInfo">
    <id column="project_id" jdbcType="VARCHAR" property="projectId" />
    <result column="company_id" jdbcType="VARCHAR" property="companyId" />
    <result column="project_industry" jdbcType="VARCHAR" property="projectIndustry" />
    <result column="project_name" jdbcType="VARCHAR" property="projectName" />
    <result column="publish_date" jdbcType="DATE" property="publishDate" />
    <result column="period" jdbcType="DECIMAL" property="period" />
    <result column="contract_person" jdbcType="VARCHAR" property="contractPerson" />
    <result column="contract_phone" jdbcType="VARCHAR" property="contractPhone" />
    <result column="project_member_count" jdbcType="DECIMAL" property="projectMemberCount" />
    <result column="area" jdbcType="VARCHAR" property="area" />
    <result column="on_spot" jdbcType="VARCHAR" property="onSpot" />
    <result column="file_material" jdbcType="VARCHAR" property="fileMaterial" />
    <result column="project_desc" jdbcType="VARCHAR" property="projectDesc" />
    <result column="remark" jdbcType="VARCHAR" property="remark" />
    <result column="fee" jdbcType="DECIMAL" property="fee" />
    <result column="status" jdbcType="VARCHAR" property="status" />
    <result column="budget" jdbcType="VARCHAR" property="budget" />
  </resultMap>
  <resultMap id="BaseProjectStaffMap" type="com.tuozuo.tavern.xinruyi.model.ProjectStaffInfo">
    <result column="staff_id" jdbcType="VARCHAR" property="id" />
    <result column="id_number" jdbcType="VARCHAR" property="idNo" />
    <result column="staff_name" jdbcType="VARCHAR" property="name" />
    <result column="gender" jdbcType="VARCHAR" property="gender" />
    <result column="salary" jdbcType="DECIMAL" property="salary" />
    <result column="enter_date" jdbcType="VARCHAR" property="beginDate" />
    <result column="quit_date" jdbcType="VARCHAR" property="endDate" />
    <result column="is_valid" jdbcType="VARCHAR" property="isValid" />
    <result column="status" jdbcType="VARCHAR" property="quit" />
    <result column="remark" jdbcType="VARCHAR" property="remark" />
    <result column="is_signed" jdbcType="VARCHAR" property="isSigned" />
  </resultMap>
  <select id="selectAll" resultMap="BaseResultMap">
    select project_id,project_name, company_id, project_industry, publish_date, period, contract_person,
    contract_phone, project_member_count, area, on_spot, file_material, project_desc, 
    remark, fee, status, budget
    from project_info
  </select>
  <select id="selectProjectStaffInfo" resultMap="BaseProjectStaffMap">
    select
      t1.staff_id,t1.id_number,t1.staff_name,t1.gender,
      t2.salary,date_format(t2.enter_date ,'%Y-%m-%d') enter_date,
      date_format(t2.quit_date ,'%Y-%m-%d') quit_date,is_valid,
      case t2.`status` when '0' then '0' when '1' then '1' else '1' end status ,
      t2.remark,t2.is_signed
    from staff_resource_pool t1,project_staff t2
    where t1.staff_id = t2.staff_id
    and t2.project_id = #{projectId}
    and t1.company_id = #{companyId}
  </select>
</mapper>